<%#= render 'blogs/error',blog: @post_comment %>
<table>
    <tr>
        <td><%= @blog.user.nickname %></td>
        <td><%= @blog.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
    </tr>
    <tr>
        <td>
            <%= @blog.title %>
        </td>
    </tr>
    <tr>
        <td>
            カテゴリー： <%= @blog.category.category_name %>
        </td>
    </tr>
    <tr>
        <td>
            <%= @blog.body %>
        </td>
    </tr>
    <tr>
        <td>
            <%= attachment_image_tag @blog, :image , :fill,100,100,format:'jpeg' %>
        </td>
    </tr>
    <tr class = "favorite">
        <!--いいね-->
    <%= render 'favorites/favorite',blog: @blog %>
    </tr>

</table>
<% if current_user == @blog.user %>
<%= link_to "編集", edit_blog_path(@blog.id) %>
<%= link_to "削除", blog_path(@blog.id),method: :delete,data:{confirm:"本当に削除しますか？"} %>
<% end %>
<%= link_to "一覧", blogs_path %>
<!--コメント一覧-->
<div class = "comments-count">
    <p>コメント数:<%= @blog.post_comments.count%></p>
</div>
<div class = "blog_comments">
   <%= render 'post_comments/comment', blog: @blog %>
</div>
<!--コメント投稿-->
<div>
    <% if current_user.followed_by?(@blog.user) && @blog.user.followed_by?(current_user) %>
     <%= form_with(model:[@blog,@post_comment]) do |f| %>
      <%= f.text_area :comment, rows:'5',placeholder:"コメント欄" %>
      <%= f.submit "送信する" %>
     <% end %>
    <% end %>
</div>