
       <% if user_signed_in? %>
        <% if blog.favorited_by?(current_user) %>
        <p>
            <%= link_to blog_favorites_path(blog),method: :delete, remote: true,class:"text-dark" do %>
            ♥<%= blog.favorites.count %> いいね
            <% end %>
        </p>
        <% else %>
         <p>
            <%= link_to blog_favorites_path(blog),method: :post, remote: true,class:"text-dark" do %>
            ♡<%= blog.favorites.count %> いいね
            <% end %>
        </p>
        <% end %>
       <% end %>
