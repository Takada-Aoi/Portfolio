<h2>プロフィール編集</h2>

<%= form_with model: @user,local:true do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>

  <label for="inputNickname">ニックネーム(サイト内で使う名前)</label>
  <%= f.text_field :nickname, autofocus: true, id:"inputNickname", placeholder:"ニックネーム"%>

  <label for="inputProfile">プロフィール</label>
  <%= f.text_area :profile, autofocus: true, id:"inputProfile", placeholder:"自己紹介"%>

  <label for="inputProfileImage">プロフィール画像</label>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,format:'jpeg',fallback: "no_image_logo.jpg",size:'40x40'%>
  <%= f.attachment_field :profile_image, autofocus: true, id:"inputProfileImage" %>

  <% if current_user == @user %>
  <%= f.submit "変更を保存" %>
  <% end %>

<% end %>