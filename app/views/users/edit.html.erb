<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0 text-center">プロフィール編集フォーム</h5>
      <div class="form-body p-4">
       <%= render 'blogs/error',blog: @user %>
       <%= form_with model: @user,local:true do |f| %>
       <h4>名前</h4><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %>
       <h4>ニックネーム(サイト内で使う名前)</h4><%= f.text_field :nickname, autofocus: true, id:"inputNickname", placeholder:"ニックネーム", class:"form-control" %>
       <h4>プロフィール</h4>
       <%= f.text_area :profile, autofocus: true, id:"inputProfile", placeholder:"自己紹介", rows:"3",  class:"form-control" %>
       <h4>プロフィール画像</h4>
       <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,format:'jpeg',fallback: "no_image_logo.jpg",size:'40x40', class: "rounded-circle" %>
       <%= f.attachment_field :profile_image, autofocus: true, id:"inputProfileImage" %>
       <hr>
        <% if current_user == @user %>
        <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
       <% end %>
      </div>
    </div>
  </div>
</div>
<button class ="fixed_btn btn btn-outline-primary" ><%= link_to "戻る", :back %></button>