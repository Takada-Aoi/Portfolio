<h1>ユーザー一覧</h1>
<table>
    <% @users.each do |user| %>
    <tr>
       <th>ユーザー名</th>
       <th>ユーザー画像</th>
    </tr>
    <tr>
     <td>
     <%= link_to user_path(user.id) do %>
     <% user.nickname %>
     <% end %>
     </td>
     <td>
      <%= attachment_image_tag user, :profile_image , :fill,100,100,format:'jpeg',fallback: "no_image_logo.jpg",size:'40x40' %>
     </td>
     <!--フォロー-->
     <td>
      <% if user_signed_in? %>
       <% if current_user != user %>
        <% if user.followed_by?(current_user) %>
         <%= link_to "フォロー済み", user_relationships_path(user.id), method: :delete %><br>
        <% else %>
         <%= link_to "フォローする", user_relationships_path(user.id),method: :post %>
        <% end %>
       <% end %>
      <% end %>
     </td>
    </tr>
    <tr>
        <td>
            <%#= attachment_image_tag user, :profile_image , :fill,100,100,format:'jpeg' %>
        </td>
    </tr>
    <% end %>
</table>