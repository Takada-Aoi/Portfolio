<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render 'users/info',user: @user %>
    </div>

<div class="col-md-4 offset-md-1">
 <table class="table">
    <tr>
        <th>投稿一覧</th>
    </tr>
    <% @blogs.each do |blog| %>
    <tr>
        <td><%= blog.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
    </tr>
    <tr>
        <td>
            <%= link_to blog_path(blog.id) do %>
            <%= blog.title %>
            <% end %>
        </td>
    </tr>
    <% end %>
</table>
</div>

<div class="col-md-3">
<% if current_user == @user %>
<table class="table">
    <tr>
        <th>いいねした投稿</th>
    </tr>
    <% @favorite_blogs.each do |blog| %>
    <tr>
        <td><%= blog.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
    </tr>
    <tr>
        <td>
            <%= link_to blog_path(blog.id) do %>
            <%= blog.title %>
            <% end %>
        </td>

    </tr>
    <% end %>
  <% end %>
</table>
  </div>
 </div>
</div>
